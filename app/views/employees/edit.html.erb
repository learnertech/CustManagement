
 <%= link_to 'Back', root_path, class: 'btn btn-primary btn-md' %>

<div class="container">
  <div class="page-header">
    <h3>Edit Employee</h3>
  </div>
</div>
<div class="container col-md-5">
  <%= bootstrap_form_for(@employee) do |f| %>
  <%= f.select :salute, options_for_select([["Select One", ""], "Mr.", "Miss" ]) %>
   <%= f.text_field :name,class: 'form-control'%>
    <%= f.label "Gender" %><br>
   <%= f.radio_button :sex,'male'  %>   
   <%= f.radio_button :sex,'female' %><br>
    <%= f.date_select :dob , order: [:month, :day, :year],:start_year=>1900, class: 'form-control' %><br>
   <%= f.text_field :base_salary %><br>
   <%= f.select :da, ((0..20).map {|i| [i,i] }) %><br>
   <%= f.select :ta, ((0..15).map {|i| [i,i] }) %><br>
  <%= f.text_area :address, class: 'form-control' %><br>
  <%= f.submit "Update Employee" ,class: 'btn btn-success' %>
<% end %>
</div>




