              </div>
            </div><br>
            <%= f.text_field :base_salary,class: 'form-control' %>
            <%= f.select :da, options_for_select((0..20).map {|i| [i,i] }),{:include_blank => true} %>
            <%= f.select :ta, ((0..15).map {|i| [i,i] }) %>
